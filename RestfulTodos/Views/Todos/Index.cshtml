
@{
    ViewBag.Title = "Index";
}
  
<link href="~/Content/sweetalert.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">

            <form id="create-form" class="add-todo-form text-center">
                <h1>Todos</h1>
                <div class="form-group">
                    <input class="form-control input-lg" type="text" id="create-input" placeholder="Add a todo...">
                    <br>
                    <button class="form-control btn btn-primary btn-block">Create</button>
                </div>
            </form>
            <hr>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Done?</th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Edit Todo</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Completed">Done?</label>
                        <input type="text" class="form-control" id="Completed" placeholder="Completed" disabled="disabled" />
                    </div>

                    <div class="form-group">
                        <label for="TodoId">ID</label>
                        <input type="text" class="form-control" id="TodoId" placeholder="Id" disabled="disabled"/>
                    </div>

                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name"/>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnUpdate">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/todos.js"></script>
<script src="~/Scripts/sweetalert.min.js"></script>
}